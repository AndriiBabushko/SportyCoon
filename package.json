{
  "name": "turbo-shad-storybook-starter",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "dev:admin:dev": "dotenv -- turbo run dev --filter @sportycoon/ui --filter admin --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:admin:prod": "dotenv -- turbo run prod --filter @sportycoon/ui --filter admin --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:main": "dotenv -- turbo run dev --filter @sportycoon/ui --filter main --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:storybook": "dotenv -- turbo run dev --filter @sportycoon/ui --filter docs --filter @sportycoon/api",
    "dev:both": "dotenv -- turbo run dev --filter @sportycoon/ui --filter admin --filter main --filter @sportycoon/api --filter @sportycoon/locales",
    "build:admin": "turbo run build --filter @sportycoon/ui --filter admin --filter @sportycoon/api --filter @sportycoon/locales",
    "deps:reinstall": "rm -rf node_modules ./apps/main/node_modules ./apps/docs/node_modules ./apps/admin/node_modules ./packages/api/node_modules ./packages/ui/node_modules && pnpm i",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@sportycoon/eslint-config": "workspace:*",
    "@turbo/gen": "latest",
    "dotenv-cli": "latest",
    "eslint": "^7.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.5",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.4",
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
