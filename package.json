{
  "name": "turbo-shad-storybook-starter",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "ci:admin": "turbo run e2e:test:admin",
    "dev:admin:dev": "dotenv -- turbo run dev --filter @sportycoon/ui --filter @sportycoon/admin --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:admin:prod": "dotenv -- turbo run prod --filter @sportycoon/ui --filter @sportycoon/admin --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:main": "dotenv -- turbo run dev --filter @sportycoon/ui --filter main --filter @sportycoon/api --filter @sportycoon/locales",
    "dev:storybook": "dotenv -- turbo run dev --filter @sportycoon/ui --filter docs --filter @sportycoon/api",
    "dev:both": "dotenv -- turbo run dev --filter @sportycoon/ui --filter @sportycoon/admin --filter main --filter @sportycoon/api --filter @sportycoon/locales",
    "build:admin": "turbo run build --filter @sportycoon/ui --filter @sportycoon/admin --filter @sportycoon/api --filter @sportycoon/locales",
    "remove:turbo": "rm -rf .turbo ./apps/main/.turbo ./apps/docs/.turbo ./apps/admin/.turbo ./packages/api/.turbo ./packages/ui/.turbo",
    "remove:node_modules": "rm -rf node_modules ./apps/main/node_modules ./apps/docs/node_modules ./apps/admin/node_modules ./packages/api/node_modules ./packages/ui/node_modules",
    "deps:reinstall": "yarn remove:turbo && yarn remove:node_modules && yarn install",
    "lint": "dotenv -- turbo run build --filter @sportycoon/api lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@sportycoon/eslint-config": "*",
    "@turbo/gen": "latest",
    "dotenv-cli": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
