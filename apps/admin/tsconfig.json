{
  "extends": "@sportycoon/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@sportycoon/ui": ["./node_modules/@sportycoon/ui"],
      "@components/*": ["app/components/*"],
      "@hooks/*": ["app/hooks/*"],
      "@store/*": ["app/store/*"],
      "@utils/*": ["app/utils/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
